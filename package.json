{
  "name": "nyumba",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build",
    "start:prod": "vite preview --host 0.0.0.0 --port 4173",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/tests/unit src/tests/security",
    "test:integration": "vitest run src/tests/integration",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test e2e/smoke.spec.js",
    "verify:release": "npm run lint && npm run test && npm run build && npm run test:smoke",
    "preview": "vite preview",
    "appwrite:provision": "node --env-file-if-exists=.env scripts/provision-appwrite.mjs",
    "appwrite:provision:dry": "node --env-file-if-exists=.env scripts/provision-appwrite.mjs --dry-run",
    "appwrite:permissions": "node --env-file-if-exists=.env scripts/apply-permissions.mjs",
    "appwrite:permissions:strict": "node --env-file-if-exists=.env scripts/apply-permissions.mjs --mode=strict"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.21",
    "appwrite": "^22.3.1",
    "date-fns": "^4.1.0",
    "i18next": "^25.8.10",
    "leaflet": "^1.9.4",
    "node-appwrite": "^22.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^15.0.0",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "react-leaflet": "^5.0.0",
    "react-pdf": "^10.3.0",
    "react-router-dom": "^7.13.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
