# -----------------------------------------------------------------------------
# NyumbaSmart environment template
# Copy this file to `.env` and replace placeholder values.
# Never commit real secrets.
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Server-side Appwrite config (used by Node scripts under `scripts/`)
# -----------------------------------------------------------------------------
APPWRITE_ENDPOINT=https://<REGION>.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=<APPWRITE_PROJECT_ID>
APPWRITE_API_KEY=<APPWRITE_SERVER_API_KEY>
APPWRITE_DATABASE_ID=<APPWRITE_DATABASE_ID>
# Keep payment functions disabled for the current free-listing phase.
ENABLE_PAYMENTS=false

# Optional server-side collection IDs (falls back to VITE_* values)
APPWRITE_COLLECTION_USERS_ID=users
APPWRITE_COLLECTION_LISTINGS_ID=listings
APPWRITE_COLLECTION_APPLICATIONS_ID=applications
APPWRITE_COLLECTION_LEASES_ID=leases
APPWRITE_COLLECTION_PAYMENTS_ID=payments
APPWRITE_COLLECTION_MAINTENANCE_TICKETS_ID=maintenanceTickets
APPWRITE_COLLECTION_MESSAGES_ID=messages
APPWRITE_COLLECTION_NOTIFICATIONS_ID=notifications

# Optional server-side bucket IDs (falls back to VITE_* values)
APPWRITE_BUCKET_LISTING_IMAGES_ID=listingImages
APPWRITE_BUCKET_LEASE_DOCUMENTS_ID=leaseDocuments
APPWRITE_BUCKET_TENANT_DOCUMENTS_ID=tenantDocuments
APPWRITE_BUCKET_RECEIPTS_ID=receipts
APPWRITE_BUCKET_AVATARS_ID=avatars

# -----------------------------------------------------------------------------
# Client-side Vite config (safe for browser exposure)
# -----------------------------------------------------------------------------
VITE_APPWRITE_ENDPOINT=https://<REGION>.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=<APPWRITE_PROJECT_ID>
VITE_APPWRITE_DATABASE_ID=<APPWRITE_DATABASE_ID>
VITE_MANAGE_RENTALS_URL=https://www.zillow.com/rental-manager/
VITE_ENABLE_EMAIL_VERIFICATION=false
VITE_ENABLE_APPWRITE_FUNCTIONS=false

# Collections
VITE_COLLECTION_USERS_ID=users
VITE_COLLECTION_LISTINGS_ID=listings
VITE_COLLECTION_APPLICATIONS_ID=applications
VITE_COLLECTION_LEASES_ID=leases
VITE_COLLECTION_MAINTENANCE_TICKETS_ID=maintenanceTickets
VITE_COLLECTION_MESSAGES_ID=messages
VITE_COLLECTION_NOTIFICATIONS_ID=notifications

# Storage buckets
VITE_BUCKET_LISTING_IMAGES_ID=listingImages
VITE_BUCKET_LEASE_DOCUMENTS_ID=leaseDocuments
VITE_BUCKET_TENANT_DOCUMENTS_ID=tenantDocuments
VITE_BUCKET_RECEIPTS_ID=receipts
VITE_BUCKET_AVATARS_ID=avatars

# Cloud Functions (optional for current MVP)
VITE_FUNCTION_GENERATE_LEASE_PDF_ID=generateLeasePDF
VITE_FUNCTION_SEND_NOTIFICATION_ID=sendNotification
VITE_FUNCTION_LEASE_EXPIRY_REMINDER_ID=leaseExpiryReminder
VITE_FUNCTION_SCAN_UPLOADED_FILE_ID=scanUploadedFile
VITE_FUNCTION_TICKET_ESCALATION_ID=ticketEscalation
